{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "require-jsdoc": 0,
    "react/react-in-jsx-scope": "off",
    "prettier/prettier": "error",
    "react/prop-types": [0],
    "quote-props": [
      "error",
      "as-needed",
      {
        "keywords": true,
        "unnecessary": false
      }
    ],
    "indent": "off",
    "space-before-function-paren": [0]
  }
}
